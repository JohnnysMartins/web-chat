{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",                 
    "jsx": "react",    
    "strict": true,                           
    "esModuleInterop": true,
    "rootDirs": ["./src", "./views"],
    "outDir": "./build",
